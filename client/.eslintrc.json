{
  "extends": [
    "airbnb-base",
    "prettier",
    "plugin:react/recommended",
    "plugin:react-hooks/recommended"
  ],
  "env": {
    "browser": true,
    "es2022": true,
    "jest": true
  },
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "requireConfigFile": false,
    "sourceType": "module",
    "ecmaVersion": "latest",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "plugins": [
    "cypress",
    "react"
  ],
  "overrides": [
    {
      "files": [
        "cypress.config.js",
        "cypress/**/*.js"
      ],
      "env": {
        "cypress/globals": true
      },
      "plugins": [
        "cypress"
      ],
      "rules": {
        "import/no-extraneous-dependencies": [
          "error",
          {
            "devDependencies": true
          }
        ],
        "no-undef": "off"
      }
    },
    {
      "files": [
        "run-tests.js"
      ],
      "rules": {
        "no-console": "off"
      }
    }
  ]
}