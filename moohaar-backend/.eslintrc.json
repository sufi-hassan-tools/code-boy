{
  "extends": ["airbnb-base", "prettier"],
  "env": { "node": true, "es2022": true },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "overrides": [
    {
      "files": ["**/__tests__/**/*.js"],
      "env": { "jest": true }
    }
  ],
  "rules": {
    "import/prefer-default-export": "error"
  }
}

